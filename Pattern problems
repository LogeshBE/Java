
package java5;


public class Java5 {

    
    public static void main(String[] args) {
        int a,i,j,k;
        for(i=0;i<=3;i++)
        {   if(i>0)
            { for(k=0;k<i;k++)
               { System.out.print(" ");
                }          
            }
          { for(j=3;j>=i;j--)
                { System.out.print("*");
                 }
          }
        System.out.println();
        }
    }
}   

