package java11;
import java.io.*;


public class Java11 {


    public static void main(String[] args) {
            
        int i,j,k,n;
         for(i=4;i>=1;i--)
        {   n=(i-1)+i;
             for(j=1;j<=7;j++)
            {
                if(j>=n)
                {   if(j%2!=0)
                    {
                      System.out.print("*");
                      continue;
                    }  
                }
                 System.out.print(" ");
            } 
             for(j=6;j>=1;j--)
            {
                if(j>=n)
                {   if(j%2!=0)
                    {
                      System.out.print("*");
                      continue;
                    }  
                }
                 System.out.print(" ");
            }
 
            System.out.println();
        }
         for(i=3;i>=1;i--)
        {   n=(i-1)+i;
             for(j=7;j>=1;j--)
            {   
                if(j<=n)
                {   if(j%2!=0)
                    {
                      System.out.print("*");
                      continue;
                    }  
                }
                 System.out.print(" ");
            } 
             for(j=1;j<=5;j++)
            {
                if(j<=n)
                {   if(j%2==0)
                    {
                      System.out.print("*");
                      continue;
                    }  
                }
                 System.out.print(" ");
            }
 
            System.out.println();
        }
    }
    
}
