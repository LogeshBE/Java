package java12;


public class Java12 {


    public static void main(String[] args) {

                int i,j,k,f;
        for(i=1;i<=5;i++)
        {   
//               if(i>=2)
//            {
//                
//            }
            for(j=5;j>=i;j--)
            { 
               System.out.print(" ");
            }
            for(k=1;k<=i;k++)
            { 
               System.out.print("*");
                
            }
         
            for(k=2;k<=i;k++)
            { 
                System.out.print(k);
            }
            System.out.println();
        }
         for(i=5;i>=1;i--)
        {
            for(j=i;j<=5;j++)
            { 
               System.out.print(" ");
            }
            for(k=1;k<=i;k++)
            { 
                System.out.print(k);
            }
               for(k=2;k<=i;k++)
            { 
                System.out.print(k);
            }
            System.out.println();
        }
    }
    
}
